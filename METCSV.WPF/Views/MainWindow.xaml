<Window
    x:Class="METCSV.WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ViewModels="clr-namespace:METCSV.WPF.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.fontawesome.io/icons/"
    xmlns:local="clr-namespace:METCSV.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:usercontrols="clr-namespace:METCSV.WPF.UserControls"
    Title="MainWindow"
    Width="540"
    Height="620"
    Closing="Window_Closing"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Window.DataContext>
        <ViewModels:MainWindowViewModel />
    </Window.DataContext>

    <Window.Resources>
        <ResourceDictionary Source="../ResourceDictionary.xaml" />
    </Window.Resources>

    <Grid Margin="10">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel
            Grid.Row="1"
            Grid.Column="0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <fa:ImageAwesome Height="30" Icon="Download" />
            <Label Content="Pobieranie" FontFamily="Comic Sans MS" />
        </StackPanel>

        <StackPanel
            Grid.Row="3"
            Grid.Column="0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <fa:ImageAwesome Height="30" Icon="AlignCenter" />
            <Label Content="Wczytywanie" />
        </StackPanel>

        <Label
            Grid.Row="0"
            Grid.Column="1"
            HorizontalAlignment="Center"
            Content="Met" />

        <Label
            Grid.Row="0"
            Grid.Column="2"
            HorizontalAlignment="Center"
            Content="Ab" />

        <Label
            Grid.Row="0"
            Grid.Column="3"
            HorizontalAlignment="Center"
            Content="TD" />

        <Label
            Grid.Row="0"
            Grid.Column="4"
            HorizontalAlignment="Center"
            Content="Lama" />

        <!--  Met Download  -->

        <usercontrols:StepsControl
            Grid.Row="1"
            Grid.Column="1"
            Status="{Binding Met.DownloaderStatus, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" />

        <!--  AB Download  -->

        <usercontrols:StepsControl
            Grid.Row="1"
            Grid.Column="2"
            Status="{Binding AB.DownloaderStatus, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" />

        <!--  TD Download  -->

        <usercontrols:StepsControl
            Grid.Row="1"
            Grid.Column="3"
            Status="{Binding TechData.DownloaderStatus, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" />

        <!--  Lama Download  -->

        <usercontrols:StepsControl
            Grid.Row="1"
            Grid.Column="4"
            Status="{Binding Lama.DownloaderStatus, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" />

        <Separator
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="5" />

        <!--  Met Read  -->

        <usercontrols:StepsControl
            Grid.Row="3"
            Grid.Column="1"
            Status="{Binding Met.ReaderStatus, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" />

        <!--  Ab Read  -->

        <usercontrols:StepsControl
            Grid.Row="3"
            Grid.Column="2"
            Status="{Binding AB.ReaderStatus, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" />

        <!--  TD Read  -->

        <usercontrols:StepsControl
            Grid.Row="3"
            Grid.Column="3"
            Status="{Binding TechData.ReaderStatus, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" />

        <!--  Lama Read  -->

        <usercontrols:StepsControl
            Grid.Row="3"
            Grid.Column="4"
            Status="{Binding Lama.ReaderStatus, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" />


        <Separator
            Grid.Row="4"
            Grid.Column="1"
            Grid.ColumnSpan="4"
            Margin="0,10,0,10" />

        <StackPanel
            Grid.Row="5"
            Grid.Column="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Vertical">
            <fa:ImageAwesome Height="40" Icon="Calculator" />
            <Label Content="Generowanie" />
        </StackPanel>

        <Grid
            Grid.Row="5"
            Grid.Column="1"
            Grid.ColumnSpan="4"
            Margin="0,0,0,0">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <usercontrols:StepsControl
                Grid.Row="0"
                Grid.Column="0"
                Height="40"
                Status="{Binding StepOneStatus}" />

            <usercontrols:StepsControl
                Grid.Row="1"
                Grid.Column="0"
                Height="40"
                Status="{Binding StepTwoStatus}" />

            <usercontrols:StepsControl
                Grid.Row="2"
                Grid.Column="0"
                Height="40"
                Status="{Binding StepThreeStatus}" />

            <usercontrols:StepsControl
                Grid.Row="3"
                Grid.Column="0"
                Height="40"
                Status="{Binding StepFourStatus}" />

            <usercontrols:StepsControl
                Grid.Row="4"
                Grid.Column="0"
                Height="40"
                Status="{Binding StepFiveStatus}" />

            <usercontrols:StepsControl
                Grid.Row="5"
                Grid.Column="0"
                Height="40"
                Status="{Binding StepSixStatus}" />

            <usercontrols:StepsControl
                Grid.Row="6"
                Grid.Column="0"
                Height="40"
                Status="{Binding StepSevenStatus}" />

            <usercontrols:StepsControl
                Grid.Row="7"
                Grid.Column="0"
                Height="40"
                Status="{Binding StepEightStatus}" />

            <usercontrols:StepsControl
                Grid.Row="8"
                Grid.Column="0"
                Height="40"
                Status="{Binding StepNineStatus}" />

            <Label
                Grid.Row="0"
                Grid.Column="1"
                Content="Krok 1: Akcja przed generowaniem." />
            <Label
                Grid.Row="1"
                Grid.Column="1"
                Content="Krok 2: Utwórz kolekcje równoległe.." />
            <Label
                Grid.Row="2"
                Grid.Column="1"
                Content="Krok 3: Filtruj ukryte produkty." />
            <Label
                Grid.Row="3"
                Grid.Column="1"
                Content="Krok 4: Utwórz listę wszystkich part numberów." />
            <Label
                Grid.Row="4"
                Grid.Column="1"
                Content="Krok 5: Uzupełnij dane." />

            <Label
                Grid.Row="5"
                Grid.Column="1"
                Content="Krok 6: Ustaw kategorię [End of Life]." />
            <Label
                Grid.Row="6"
                Grid.Column="1"
                Content="Krok 7: Porównaj." />

            <Label
                Grid.Row="7"
                Grid.Column="1"
                Content="Krok 8: Połącz liste." />

            <Label
                Grid.Row="8"
                Grid.Column="1"
                Content="Krok 9: Akcja po wygenerowaniu." />
        </Grid>

        <CheckBox
            Grid.Row="6"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Content="Ustaw marże po załadowaniu plików."
            IsChecked="{Binding SetProfits}" />

        <StackPanel
            Grid.Row="7"
            Grid.ColumnSpan="5"
            Width="Auto"
            Height="Auto"
            Margin="10"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button Click="Button_Click" Content="Rozpocznij" />
            <Button Click="Button_Click_1" Content="Ustawienia" />
            <Button
                Click="Export"
                Content="Exportuj"
                IsEnabled="{Binding ExportEnabled}" />
        </StackPanel>

    </Grid>
</Window>
