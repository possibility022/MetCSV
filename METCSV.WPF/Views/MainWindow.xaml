<Window
    x:Class="METCSV.WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ViewModels="clr-namespace:METCSV.WPF.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.fontawesome.io/icons/"
    xmlns:local="clr-namespace:METCSV.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="442.97"
    Height="493.793"
    mc:Ignorable="d">

    <Window.DataContext>
        <ViewModels:MainWindowViewModel />
    </Window.DataContext>

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label
            Grid.Row="1"
            Grid.Column="0"
            Content="Downloading status" />

        <Label
            Grid.Row="2"
            Grid.Column="0"
            Content="Loading file" />

        <Label
            Grid.Row="0"
            Grid.Column="1"
            HorizontalAlignment="Center"
            Content="Met" />

        <Label
            Grid.Row="0"
            Grid.Column="2"
            HorizontalAlignment="Center"
            Content="Ab" />

        <Label
            Grid.Row="0"
            Grid.Column="3"
            HorizontalAlignment="Center"
            Content="Tech Data" />

        <Label
            Grid.Row="0"
            Grid.Column="4"
            HorizontalAlignment="Center"
            Content="Lama" />

        <fa:ImageAwesome
            Name="LamaDownloadProgress"
            Grid.Row="1"
            Grid.Column="4"
            Width="30"
            Margin="10"
            Icon="Cog"
            Spin="True"
            Visibility="{Binding LamaController.DownloadInProgressVisibility}" />

        <fa:ImageAwesome
            Name="LamaDownloadWaiting"
            Grid.Row="1"
            Grid.Column="4"
            Width="30"
            Margin="10"
            Icon="ClockOutline"
            Visibility="{Binding LamaController.DownloadWaitingVisibility}" />

        <fa:ImageAwesome
            Name="LamaDownloadDone"
            Grid.Row="1"
            Grid.Column="4"
            Width="30"
            Margin="10"
            Icon="Check"
            Visibility="{Binding LamaController.DownloadDoneVisibility}" />

        <fa:ImageAwesome
            Name="MetDownloadProgress"
            Grid.Row="1"
            Grid.Column="1"
            Width="30"
            Margin="10"
            Icon="Cog"
            Spin="True"
            SpinDuration="10"
            Visibility="{Binding MetController.DownloadInProgressVisibility}" />

        <fa:ImageAwesome
            Name="MetDownloadWaiting"
            Grid.Row="1"
            Grid.Column="1"
            Width="30"
            Margin="10"
            Icon="ClockOutline"
            Visibility="{Binding MetController.DownloadWaitingVisibility}" />

        <fa:ImageAwesome
            Name="MetDownloadDone"
            Grid.Row="1"
            Grid.Column="1"
            Width="30"
            Margin="10"
            Icon="Check"
            Visibility="{Binding MetController.DownloadDoneVisibility}" />

        <fa:ImageAwesome
            Name="ABDownloadProgress"
            Grid.Row="1"
            Grid.Column="2"
            Width="30"
            Margin="10"
            Icon="Cog"
            Spin="True"
            SpinDuration="10"
            Visibility="{Binding AbController.DownloadInProgressVisibility}" />

        <fa:ImageAwesome
            Name="ABDownloadWaiting"
            Grid.Row="1"
            Grid.Column="2"
            Width="30"
            Margin="10"
            Icon="ClockOutline"
            Visibility="{Binding AbController.DownloadWaitingVisibility}" />

        <fa:ImageAwesome
            Name="ABDownloadDone"
            Grid.Row="1"
            Grid.Column="2"
            Width="30"
            Margin="10"
            Icon="Check"
            Visibility="{Binding AbController.DownloadDoneVisibility}" />

        <fa:ImageAwesome
            Name="TDDownloadProgress"
            Grid.Row="1"
            Grid.Column="3"
            Width="30"
            Margin="10"
            Icon="Cog"
            Spin="True"
            SpinDuration="10"
            Visibility="{Binding TdController.DownloadInProgressVisibility}" />

        <fa:ImageAwesome
            Name="TDDownloadWaiting"
            Grid.Row="1"
            Grid.Column="3"
            Width="30"
            Margin="10"
            Icon="ClockOutline"
            Visibility="{Binding TdController.DownloadWaitingVisibility}" />

        <fa:ImageAwesome
            Name="TDDownloadDone"
            Grid.Row="1"
            Grid.Column="3"
            Width="30"
            Margin="10"
            Icon="Check"
            Visibility="{Binding TdController.DownloadDoneVisibility}" />

        <fa:ImageAwesome
            Name="LamaFileReadProgress"
            Grid.Row="2"
            Grid.Column="4"
            Width="30"
            Margin="10"
            Icon="Cog"
            Spin="True"
            SpinDuration="10"
            Visibility="{Binding LamaController.ReadInProgressVisibility}" />

        <fa:ImageAwesome
            Name="LamaFileReadWaiting"
            Grid.Row="2"
            Grid.Column="4"
            Width="30"
            Margin="10"
            Icon="ClockOutline"
            Visibility="{Binding LamaController.ReadWaitingVisibility}" />

        <fa:ImageAwesome
            Name="LamaFileReadDone"
            Grid.Row="2"
            Grid.Column="4"
            Width="30"
            Margin="10"
            Icon="Check"
            Visibility="{Binding LamaController.ReadDoneVisibility}" />

        <fa:ImageAwesome
            Name="MetFileReadProgress"
            Grid.Row="2"
            Grid.Column="1"
            Width="30"
            Margin="10"
            Icon="Cog"
            Spin="True"
            SpinDuration="10"
            Visibility="{Binding MetController.ReadInProgressVisibility}" />

        <fa:ImageAwesome
            Name="MetFileReadWaiting"
            Grid.Row="2"
            Grid.Column="1"
            Width="30"
            Margin="10"
            Icon="ClockOutline"
            Visibility="{Binding MetController.ReadWaitingVisibility}" />

        <fa:ImageAwesome
            Name="MetFileReadDone"
            Grid.Row="2"
            Grid.Column="1"
            Width="30"
            Margin="10"
            Icon="Check"
            Visibility="{Binding MetController.ReadDoneVisibility}" />

        <fa:ImageAwesome
            Name="ABFileReadProgress"
            Grid.Row="2"
            Grid.Column="2"
            Width="30"
            Margin="10"
            Icon="Cog"
            Spin="True"
            SpinDuration="10"
            Visibility="{Binding AbController.ReadInProgressVisibility}" />

        <fa:ImageAwesome
            Name="ABFileReadWaiting"
            Grid.Row="2"
            Grid.Column="2"
            Width="30"
            Margin="10"
            Icon="ClockOutline"
            Visibility="{Binding AbController.ReadWaitingVisibility}" />

        <fa:ImageAwesome
            Name="ABFileReadDone"
            Grid.Row="2"
            Grid.Column="2"
            Width="30"
            Margin="10"
            Icon="Check"
            Visibility="{Binding AbController.ReadDoneVisibility}" />

        <fa:ImageAwesome
            Name="TDFileReadProgress"
            Grid.Row="2"
            Grid.Column="3"
            Width="30"
            Margin="10"
            Icon="Cog"
            Spin="True"
            SpinDuration="10"
            Visibility="{Binding TdController.ReadInProgressVisibility}" />

        <fa:ImageAwesome
            Name="TDFileReadWaiting"
            Grid.Row="2"
            Grid.Column="3"
            Width="30"
            Margin="10"
            Icon="ClockOutline"
            Visibility="{Binding TdController.ReadWaitingVisibility}" />

        <fa:ImageAwesome
            Name="TDFileReadDone"
            Grid.Row="2"
            Grid.Column="3"
            Width="30"
            Margin="10"
            Icon="Check"
            Visibility="{Binding TdController.ReadDoneVisibility}" />

        <StackPanel
            Grid.Row="3"
            Grid.Column="1"
            Grid.ColumnSpan="4">

            <Label Content="Krok 1: Filtruj ukryte produkty" />
            <Label Content="Krok 2: Utwórz listę wszystkich part numberów" />
            <Label Content="Krok 3: Uzupełnij dane" />
            <Label Content="Krok 4: Ustaw kategorię [End of Life]" />
            <Label Content="Krok 5: Porównaj" />

        </StackPanel>

        <TextBlock
            Grid.Row="4"
            Grid.ColumnSpan="5"
            Text="Tu będzie LOG!" />

        <StackPanel
            Grid.Row="5"
            Grid.ColumnSpan="5"
            Width="Auto"
            Height="Auto"
            Margin="10"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button Click="Button_Click" Content="Rozpocznij" />
            <Button Content="Ustawienia" />
            <Button Content="Exportuj" />
            <Button Content="Wyjdź" />
        </StackPanel>

    </Grid>
</Window>
