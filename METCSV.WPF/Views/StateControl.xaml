<UserControl
    x:Class="METCSV.WPF.Views.UserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.fontawesome.io/icons/"
    xmlns:local="clr-namespace:METCSV.WPF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="100"
    d:DesignWidth="100">
    
    <Grid>
        
        <fa:ImageAwesome
            Grid.Row="1"
            Grid.Column="4"
            Margin="10"
            Icon="Check"
            SpinDuration="{Binding LamaCogsController.DownloadInProgress}"
            Visibility="Visible" />
        <fa:ImageAwesome
            Grid.Row="1"
            Grid.Column="4"
            Margin="10"
            Icon="Cog"
            Spin="True"
            SpinDuration="{Binding LamaCogsController.DownloadInProgress}"
            Visibility="Hidden" />
        <fa:ImageAwesome
            Grid.Row="1"
            Grid.Column="4"
            Margin="10"
            Icon="ClockOutline"
            SpinDuration="{Binding LamaCogsController.DownloadInProgress}"
            Visibility="Hidden" />
    </Grid>
</UserControl>
